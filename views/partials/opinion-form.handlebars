<!-- views/partials/opinion-form.handlebars -->

  <form action="/charities/opinions" method="post">
    <input type="hidden" value="{{charity._id}}" name="charityId">
    <fieldset>
      <legend>Have an opinion</legend>
      <!-- TITLE -->
      <div class="form-group">
        <label for="opinion-title">Title</label><br>
        <input class="form-control"
          id="opinion-title"
          type="text"
          name="title"
          placeholder="Title"/>
      </div>

      <!-- DESCRIPTION -->
      <div class="form-group">
        <label for="opinion-content">Description</label><br>
        <textarea class="form-control"
        id="opinion-content"
        name="content"
        rows="10"
        placeholder="Your opinion..."/></textarea>
      </div>
    </fieldset>

    <!-- BUTTON -->
    <div class="form-group">
      <button class="btn btn-primary" type="submit">Save Opinion</button>
    </div>
</form>